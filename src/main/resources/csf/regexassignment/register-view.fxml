<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="csf.regexassignment.RegisterViewController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="348.0" layoutY="72.0" prefHeight="262.0" prefWidth="206.0" spacing="5.0">
         <children>
            <TextField fx:id="firstNameField" onKeyTyped="#firstNameCheck" promptText="first name" />
            <Label fx:id="firstNameFeedback" textFill="RED">
               <font>
                  <Font size="8.0" />
               </font>
            </Label>
            <TextField fx:id="lastNameField" layoutX="10.0" layoutY="10.0" onKeyTyped="#lastNameCheck" promptText="last name" />
            <Label fx:id="lastNameFeedback" layoutX="113.0" layoutY="40.0" textFill="RED">
               <font>
                  <Font size="8.0" />
               </font>
            </Label>
            <TextField fx:id="dobField" layoutX="10.0" layoutY="36.0" onKeyTyped="#dobCheck" promptText="date of birth" />
            <Label fx:id="dobFeedback" layoutX="113.0" layoutY="88.0" textFill="RED">
               <font>
                  <Font size="8.0" />
               </font>
            </Label>
            <TextField fx:id="emailField" layoutX="10.0" layoutY="61.0" onKeyTyped="#emailCheck" promptText="email" />
            <Label fx:id="emailFeedback" layoutX="113.0" layoutY="135.0" textFill="RED">
               <font>
                  <Font size="8.0" />
               </font>
            </Label>
            <TextField fx:id="zipField" layoutX="10.0" layoutY="61.0" onKeyTyped="#zipCheck" promptText="zip code" />
            <Label fx:id="zipFeedback" layoutX="113.0" layoutY="182.0" textFill="RED">
               <font>
                  <Font size="8.0" />
               </font>
            </Label>
            <Button fx:id="registerButton" disable="true" mnemonicParsing="false" onAction="#registerClicked" text="Register" />
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" layoutX="79.0" layoutY="157.0" prefHeight="82.0" prefWidth="206.0">
         <children>
            <Label text="Welcome!" textAlignment="CENTER" textFill="#4400ff">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <Label text="Please register here" textFill="#004f79">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
